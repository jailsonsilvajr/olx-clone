<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.olxclone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".SplashActivity"
            android:label="OLX_Clone"
            android:theme="@style/AppCompat.FullScream">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".LocationActivity"
            android:label="@string/title_activity_region"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CategoryActivity"
            android:label="@string/title_activity_categories"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FilterActivity"
            android:label="@string/title_activity_filters"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/enter"
            android:theme="@style/AppTheme" />
    </application>

</manifest>